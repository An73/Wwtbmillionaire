            android:gravity="center"
            android:textColor="#f76f00"/>
        <TextView
            android:id="@+id/l9"
            android:text="@string/l9"
            android:layout_height="14dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="#f76f00"/>
        <TextView
            android:id="@+id/l8"
            android:text="@string/l8"
            android:layout_height="14dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="#f76f00"/>
        <TextView
            android:id="@+id/l7"
            android:text="@string/l7"
            android:layout_height="14dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="#f76f00"/>
        <TextView
            android:id="@+id/l6"
            android:text="@string/l6"
