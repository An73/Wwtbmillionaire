    </LinearLayout>

    <ImageButton
        android:id="@+id/iButtonCallToFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/call_button"
        android:background="@null"
        android:layout_marginStart="10dp"
        android:layout_marginTop="45dp"
        android:onClick="onClickButtonCall"/>

    <ImageButton
        android:id="@+id/iButtonCrowd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/crowd"
        android:background="@null"
        android:layout_alignTop="@id/iButtonCallToFriend"
        android:layout_marginStart="10dp"
        android:layout_marginTop="45dp"
        android:onClick="onClickButtonCrowd"/>

    <ImageButton
        android:id="@+id/iButtonFifty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fifty"
        android:background="@null"
        android:layout_alignTop="@id/iButtonCrowd"
        android:layout_marginStart="10dp"
        android:layout_marginTop="45dp"
        android:onClick="onClickFifty"/>



    <TextView
        android:id="@+id/questions"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/button_a"
        android:background="@drawable/questions"
        android:layout_marginBottom="50dp"
        android:layout_width="310dp"
        android:layout_height="60dp"
        android:padding="4dp"
        android:textColor="#f5ecab"
        />

    <Button
        android:id="@+id/button_d"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:onClick="onClickButtonD"
        android:textColor="#d4d4d4"/>
    <Button
        android:id="@+id/button_c"
        android:gravity="center"
        android:layout_alignBottom="@id/button_d"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:onClick="onClickButtonC"
        android:textColor="#d4d4d4"/>
    <Button
        android:id="@+id/button_b"
        android:gravity="center"
        android:layout_alignBottom="@id/button_c"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:onClick="onClickButtonB"
        android:textColor="#d4d4d4"/>
    <Button
        android:id="@+id/button_a"
        android:gravity="center"
        android:layout_alignBottom="@id/button_b"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:onClick="onClickButtonA"
        android:textColor="#d4d4d4"/>


