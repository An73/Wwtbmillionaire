<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo_millionaire"
        android:contentDescription="@string/menu_descript"/>

    <Button
        android:id="@+id/buttonStart"
        android:text="@string/menu_start"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/buttonExit"
        android:layout_margin="70dp"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:onClick="onStartGame"/>

    <Button
        android:id="@+id/buttonExit"
        android:text="@string/menu_exit"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:onClick="onExitGame"/>

</RelativeLayout>